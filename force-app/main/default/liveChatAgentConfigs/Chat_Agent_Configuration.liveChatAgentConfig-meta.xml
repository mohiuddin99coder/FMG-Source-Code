<?xml version="1.0" encoding="UTF-8"?>
<LiveChatAgentConfig xmlns="http://soap.sforce.com/2006/04/metadata">
    <assignments>
        <profiles>
            <profile>Admin</profile>
            <profile>Service Rep</profile>
        </profiles>
    </assignments>
    <autoGreeting>Hello {!LiveAgent_VisitorName}! Welcome to FMG Customer Support. You are chatting with Agent - {!User_FirstName}.</autoGreeting>
    <customAgentName>{!User_FirstName}</customAgentName>
    <disableTransferConferenceGreeting>false</disableTransferConferenceGreeting>
    <enableAgentFileTransfer>true</enableAgentFileTransfer>
    <enableAgentSneakPeek>false</enableAgentSneakPeek>
    <enableAssistanceFlag>false</enableAssistanceFlag>
    <enableAutoAwayOnDecline>false</enableAutoAwayOnDecline>
    <enableAutoAwayOnPushTimeout>false</enableAutoAwayOnPushTimeout>
    <enableChatConferencing>true</enableChatConferencing>
    <enableChatMonitoring>true</enableChatMonitoring>
    <enableChatTransferToAgent>true</enableChatTransferToAgent>
    <enableChatTransferToButton>true</enableChatTransferToButton>
    <enableChatTransferToSkill>true</enableChatTransferToSkill>
    <enableLogoutSound>true</enableLogoutSound>
    <enableNotifications>false</enableNotifications>
    <enableRequestSound>false</enableRequestSound>
    <enableSneakPeek>true</enableSneakPeek>
    <enableVisitorBlocking>false</enableVisitorBlocking>
    <enableWhisperMessage>true</enableWhisperMessage>
    <label>Chat Agent Configuration</label>
    <transferableButtons>
        <button>CC_Staging_Live_Chat</button>
        <button>Production_LiveChat</button>
    </transferableButtons>
</LiveChatAgentConfig>
