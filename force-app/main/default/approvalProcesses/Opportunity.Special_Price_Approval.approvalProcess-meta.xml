<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>Amount</field>
        <field>Platinum_Star_Level__c</field>
        <field>X365_Days__c</field>
        <field>Lifetime__c</field>
        <field>Shipping_Cost__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bushmant@firemtn.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Todd Approval</label>
        <name>Todd_Approval</name>
    </approvalStep>
    <description>After review of both product and pricing team Todd need to approve the process.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>In Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Special_Price_Order__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Reviewed_By_Both_Pricing_Product_Group__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Special_Order_Approved_By_Todd</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Unlock_the_Stage</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_to_Quote</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Lock_Opportunity</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Loss_Reason_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Special_Order_Rejected_By_Todd</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Unlock_the_Stage</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Approval_to_ClosedLost</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Other_Loss_Reason</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>In_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Special_Order_Approval_Mail_For_Todd</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Special_Price_Approval_Request</name>
            <type>Task</type>
        </action>
    </initialSubmissionActions>
    <label>Special Price Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
